   "source": [
    "import os\n",
    "import pandas as pd\n",
    "from transformers import AutoTokenizer, AutoModel\n",
    "from sklearn.metrics.pairwise import cosine_similarity\n",
    "import torch"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 22,
   "metadata": {},
   "outputs": [],
   "source": [
    "# 读取文本文件\n",
    "def read_file(file_path):\n",
    "    with open(file_path, 'r', encoding='utf-8') as file:\n",
    "        return file.read()\n",
    "\n",
    "# 加载本地Bert模型和分词器\n",
    "def load_local_Bert(model_dir):\n",
    "    tokenizer = AutoTokenizer.from_pretrained(model_dir, use_fast=True)\n",
    "    model = AutoModel.from_pretrained(model_dir)\n",
    "    model = model.to('cuda')\n",
    "    return tokenizer, model\n",
    "\n",
    "# 获取文本表示\n",
    "def get_text_representation(tokenizer, model, text):\n",
    "    # 将文本编码为XLNet的输入格式\n",
    "    inputs = tokenizer(text, return_tensors=\"pt\", max_length=512, pad_to_max_length=True, truncation=True)\n",
    "    # 将数据移动到指定的设备\n",
    "    inputs = {k: v.to('cuda') for k, v in inputs.items()}\n",
    "    # 获取模型的输出\n",
    "    with torch.no_grad():\n",
    "        outputs = model(**inputs)\n",
    "    return outputs.last_hidden_state.mean(dim=1)  # 取最后一层的表示并求平均\n",
    "\n",
    "# 计算文本相似度\n",
    "def calculate_similarity(rep1, rep2):\n",
    "    # 计算余弦相似度\n",
    "    similarity = cosine_similarity(rep1.cpu().numpy(), rep2.cpu().numpy())\n",
    "    return similarity[0][0]  # 返回相似度分数\n",
    "\n",
    "# 比较并保存相似度结果\n",
    "def compare_and_save_similarity(dir1, dir2, model_dir):\n",
    "    files1 = [f for f in os.listdir(dir1) if f.endswith('.txt')]\n",
    "    files2 = [f for f in os.listdir(dir2) if f.endswith('.txt')]\n",
    "    \n",
    "    # 确保两个目录中的文件数量相同\n",
    "    min_files = min(len(files1), len(files2))\n",
    "    similarities = []\n",
    "\n",
    "    # 准备DataFrame来存储结果\n",
    "    similarities = []\n",
    "    tokenizer, model = load_local_Bert(model_dir)\n",
    "    \n",
    "    for i in range(min_files):\n",
    "        file1 = files1[i]\n",
    "        file2 = files2[i]\n",
    "\n",
    "        text1 = read_file(os.path.join(dir1, file1))\n",
    "        text2 = read_file(os.path.join(dir2, file2))\n",
    "        \n",
    "        rep1 = get_text_representation(tokenizer, model, text1)\n",
    "        rep2 = get_text_representation(tokenizer, model, text2)\n",
    "        similarity = calculate_similarity(rep1, rep2)\n",
    "        similarities.append({'File1': file1, 'File2': file2, 'Similarity': similarity})\n",
    "    \n",
    "    df = pd.DataFrame(similarities)\n",
    "    df.to_excel('similarity9.xlsx', index=False)"
   ]
  },
